<article class="post">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      Posted by
      {{user.username}}
      on
      {{format_date created_at}}
      <p class="card-text">{{text}}</p>
      <a href="/post/{{id}}" class="btn btn-outline-light">
        {{comments.length}}  {{format_plural "comment" comments.length}}
      </a>
    </div>
  </div>
</article>